<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="true">
    >
    <!-- Exception Handling -->
    <error-page>
        <location>/error</location>
    </error-page>

    <!-- Filters -->
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>com.belhard.bookstore.web.filter.LogFilter</filter-class>>
    </filter>

    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.belhard.bookstore.web.filter.LoginFilter</filter-class>>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/users/all</url-pattern>
        <url-pattern>/books/create</url-pattern>
        <url-pattern>/orders/all</url-pattern>
        <url-pattern>/orders/user/*</url-pattern>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.belhard.bookstore.web.filter.AuthorizationFilter</filter-class>>
    </filter>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/users/all</url-pattern>
        <url-pattern>/books/create</url-pattern>
        <url-pattern>/orders/all</url-pattern>
    </filter-mapping>
</web-app>
